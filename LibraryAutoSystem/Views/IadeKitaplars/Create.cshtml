@model LibraryAutoSystem.Models.IadeKitaplar

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni İade Edilen Kitabı Ekle</h1>

<h4>İade Edilen Kitap</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IadeKitapId" class="control-label"></label>
                <select asp-for="IadeKitapId" class ="form-control" asp-items="ViewBag.IadeKitapId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IadeEdenId" class="control-label"></label>
                <select asp-for="IadeEdenId" class ="form-control" asp-items="ViewBag.IadeEdenId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IadeTarihi" class="control-label"></label>
                <input asp-for="IadeTarihi" class="form-control" />
                <span asp-validation-for="IadeTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
