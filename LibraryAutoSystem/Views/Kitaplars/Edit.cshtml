@model LibraryAutoSystem.Models.Kitaplar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>

<h4>Kitaplar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KitapId" />
            <div class="form-group">
                <label asp-for="KitapAdi" class="control-label"></label>
                <input asp-for="KitapAdi" class="form-control" />
                <span asp-validation-for="KitapAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YayinEvi" class="control-label"></label>
                <input asp-for="YayinEvi" class="form-control" />
                <span asp-validation-for="YayinEvi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YayinTarihi" class="control-label"></label>
                <input asp-for="YayinTarihi" class="form-control" />
                <span asp-validation-for="YayinTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tur" class="control-label"></label>
                <input asp-for="Tur" class="form-control" />
                <span asp-validation-for="Tur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsbnNo" class="control-label"></label>
                <input asp-for="IsbnNo" class="form-control" />
                <span asp-validation-for="IsbnNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YazarId" class="control-label"></label>
                <select asp-for="YazarId" class="form-control" asp-items="ViewBag.YazarSoy"></select>
                <span asp-validation-for="YazarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
