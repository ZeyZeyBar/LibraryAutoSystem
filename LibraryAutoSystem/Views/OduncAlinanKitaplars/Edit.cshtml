@model LibraryAutoSystem.Models.OduncAlinanKitaplar

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Düzenle</h1>

<h4>Ödünç Alınan Kitaplar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @*
            <input type="hidden" asp-for="KitapId" />*@
            <label asp-for="KitapId" class="control-label"></label>
            <select asp-for="KitapId" class="form-control" asp-items="ViewBag.KitapAd"></select>
            <span asp-validation-for="KitapId" class="text-danger"></span>

            @*<input type="hidden" asp-for="UyeId" />*@

            <label asp-for="UyeId" class="control-label"></label>
            <select asp-for="UyeId" class="form-control" asp-items="ViewBag.UyeAd"></select>
            <span asp-validation-for="UyeId" class="text-danger"></span>
            <input type="hidden" asp-for="OduncAlmaTarihi" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
