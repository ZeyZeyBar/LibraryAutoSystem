@model LibraryAutoSystem.Models.OduncAlinanKitaplar

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sil</h1>

<h3>Kaydı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>OduncAlinanKitaplar</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Kitap)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Kitap.KitapAdi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Uye)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Uye.UyeAdi) @Html.DisplayFor(model=>model.Uye.UyeSoyadi)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="KitapId" />
        <input type="hidden" asp-for="UyeId" />
        <input type="hidden" asp-for="OduncAlmaTarihi" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Listeye Geri Dön</a>
    </form>
</div>
